{
  "version": 2,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": [
          "dist/**",
          "node_modules/.prisma/**",
          "node_modules/@prisma/client/**",
          "prisma/schema.prisma"
        ] 
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/index.js"
    }
  ]
}