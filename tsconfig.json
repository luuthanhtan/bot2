{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",             // ✅ Đổi ở đây
    "moduleResolution": "node",       // ✅ Đổi ở đây
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}